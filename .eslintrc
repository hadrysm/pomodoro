{
  "extends": ["airbnb", "prettier", "prettier/react"],

  "env": {
    "jest": true
  },

  "globals": {
    "document": true,
    "window": true
  },

  "rules": {
    "import/no-unresolved": 0,
    "import/prefer-default-export": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ]
  },

  "settings": {
    "imports/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js"]
      }
    }
  }
}
